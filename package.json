{
  "name": "@noanswer/context-compose",
  "version": "1.0.5",
  "description": "Model Context Protocol (MCP) server and CLI tool - Single package, multiple entry points",
  "type": "module",
  "main": "index.js",
  "bin": {
    "context-compose": "bin/context-compose-cli.js",
    "context-compose-mcp": "bin/context-compose-server.js"
  },
  "scripts": {
    "build": "tsc",
    "context-compose": "tsx src/cli/index.ts",
    "inspect": "npx fastmcp inspect mcp-server/server.ts",
    "inspect:built": "npx fastmcp inspect dist/mcp-server/server.js",
    "test": "vitest",
    "lint": "biome lint src mcp-server",
    "lint:fix": "biome lint --write src mcp-server",
    "format": "biome format --write src mcp-server",
    "format:check": "biome format src mcp-server",
    "check": "biome check src mcp-server",
    "check:fix": "biome check --write src mcp-server",
    "type-check": "tsc --noEmit",
    "publish-public": "npm publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/weproud/context-compose.git"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "context-compose",
    "typescript",
    "fastmcp",
    "cli",
    "automation",
    "workflow"
  ],
  "author": "noanswer",
  "license": "MIT WITH Commons-Clause",
  "bugs": {
    "url": "https://github.com/weproud/context-compose/issues"
  },
  "homepage": "https://github.com/weproud/context-compose#readme",
  "files": [
    "scripts/**",
    "assets/**",
    ".cursor/**",
    "README-task-master.md",
    "index.js",
    "bin/**",
    "mcp-server/**",
    "src/**"
  ],
  "dependencies": {
    "commander": "^11.1.0",
    "dotenv": "^16.4.5",
    "fastmcp": "^2.2.1",
    "fs-extra": "^11.3.0",
    "inquirer": "^12.6.3",
    "mustache": "^4.2.0",
    "yaml": "^2.8.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@playwright/test": "^1.52.0",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.8",
    "@types/mustache": "^4.2.6",
    "@types/node": "^22.15.29",
    "@types/yaml": "^1.9.6",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
