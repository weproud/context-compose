{
  "name": "@madeinnook/task-action",
  "version": "1.0.0",
  "description": "Model Context Protocol (MCP) 서버 및 CLI 도구 - 단일 패키지, 다중 진입점",
  "type": "module",
  "main": "dist/mcp-server/src/index.js",
  "bin": {
    "task-action": "bin/task-action-cli.js",
    "task-action-server": "mcp-server/server.js"
  },
  "scripts": {
    "build": "tsc",
    "dev:server": "tsx mcp-server/src/index.ts",
    "dev:cli": "tsx src/cli/index.ts",
    "start:server": "node dist/mcp-server/src/index.js",
    "start:cli": "npx tsx bin/task-action-cli.ts",
    "task-action": "tsx src/cli/index.ts",
    "inspect": "npx fastmcp inspect mcp-server/server.ts",
    "inspect:built": "npx fastmcp inspect dist/mcp-server/server.js",
    "test": "vitest",
    "test:actions": "tsx scripts/test-actions.ts",
    "test:actions:all": "tsx scripts/test-actions.ts all",
    "test:actions:mock": "tsx scripts/test-actions.ts all --mode mock",
    "test:actions:integration": "tsx scripts/test-actions.ts all --mode integration",
    "test:actions:e2e": "tsx scripts/test-actions.ts all --mode e2e",
    "test:actions:verbose": "tsx scripts/test-actions.ts all --verbose",
    "test:actions:html": "tsx scripts/test-actions.ts all --output html",
    "test:action:create-branch": "tsx scripts/test-actions.ts single create-branch",
    "test:action:slack": "tsx scripts/test-actions.ts single send-message-slack",
    "test:action:discord": "tsx scripts/test-actions.ts single discord-send-message",
    "test:actions:git": "tsx scripts/test-actions.ts type git",
    "test:actions:messaging": "tsx scripts/test-actions.ts type message",
    "test:live": "tsx src/cli/index.ts test",
    "test:live:actions": "tsx src/cli/index.ts test actions",
    "test:live:notify": "tsx src/cli/index.ts test notify",
    "lint": "eslint src/**/*.ts mcp-server/**/*.ts",
    "lint:fix": "eslint src/**/*.ts mcp-server/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts mcp-server/**/*.ts",
    "format:check": "prettier --check src/**/*.ts mcp-server/**/*.ts",
    "type-check": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/weproud/task-action.git"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "task-action",
    "typescript",
    "fastmcp",
    "cli",
    "automation",
    "workflow"
  ],
  "author": "weproud",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/weproud/task-action/issues"
  },
  "homepage": "https://github.com/weproud/task-action#readme",
  "dependencies": {
    "commander": "^11.1.0",
    "dotenv": "^16.4.5",
    "fastmcp": "^2.2.1",
    "fs-extra": "^11.3.0",
    "inquirer": "^12.6.3",
    "mustache": "^4.2.0",
    "yaml": "^2.8.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.8",
    "@types/mustache": "^4.2.6",
    "@types/node": "^22.15.29",
    "@types/yaml": "^1.9.6",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "eslint": "^9.28.0",
    "prettier": "^3.5.3",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
